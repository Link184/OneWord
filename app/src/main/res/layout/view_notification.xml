<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_border"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/notification_button_text_to_speech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:src="@drawable/ic_volume_up"
                android:tint="@color/textPrimary" />

            <TextView
                android:id="@+id/notification_word_original"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center_vertical|start"
                android:layout_gravity="center_vertical|start"
                android:textColor="@color/textPrimary"
                tools:text="@tools:sample/lorem/random" />
        </LinearLayout>

        <TextView
            android:id="@+id/notification_word_translation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/textPrimary"
            android:maxLines="4"
            android:textSize="18sp"
            android:gravity="center_vertical|start"
            android:layout_gravity="center_vertical|start"
            tools:text="asd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/notification_button_next"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimary"
            android:text="@string/notification_button_next_word" />

        <Button
            android:id="@+id/notification_button_cancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimary"
            android:text="@string/notification_button_dont_show_today" />

        <ImageView
            android:id="@+id/notification_button_settings"
            android:layout_width="32dp"
            android:layout_height="32.dp"
            android:layout_gravity="center_vertical"
            android:padding="6dp"
            android:src="@drawable/ic_settings"
            android:tint="@color/textPrimary" />
    </LinearLayout>

</LinearLayout>